<div class="p-8">
  <h1 class="font-bold text-4xl mb-6">Admin Dashboard</h1>
  
  <div class="stats grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="stat-card">
      <h2>Total Posts</h2>
      <p><%= @total_posts %></p>
    </div>
    <div class="stat-card">
      <h2>Total Topics</h2>
      <p><%= @total_topics %></p>
    </div>
    <div class="stat-card">
      <h2>Total Tags</h2>
      <p><%= @total_tags %></p>
    </div>
    <div class="stat-card">
      <h2>Draft Posts</h2>
      <p><%= @draft_posts %></p>
    </div>
  </div>

  <h2 class="text-2xl font-semi-bold mb-4">Posts by Category</h2>
  <div class="overflow-x-auto rounded-lg shadow-md">
    <table class="table-container">
      <thead>
        <tr>
          <th class="table-header">Category</th>
          <th class="table-header">Total Posts</th>
        </tr>
      </thead>
      <tbody class="text-gray-700">
        <% @posts_by_category.each do |category, count| %>
          <tr class="hover:bg-gray-100">
            <td class="table-cell"><%= category %></td>
            <td class="table-cell"><%= count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
