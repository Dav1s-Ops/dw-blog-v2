<div class="p-8">
  <h1 class="font-bold text-4xl mb-4"><%= @post.title %></h1>

  <div class="mb-6 text-gray-600">
    <p>Status: <%= @post.status.capitalize %></p>
    <p>Created at: <%= @post.created_at.strftime("%B %d, %Y") %></p>
    <p>Updated at: <%= @post.updated_at.strftime("%B %d, %Y") %></p>
  </div>

  <div class="post-content">
    <%= @post.content %>
  </div>

  <div class="mt-4">
    <%= link_to 'Back to Posts', admin_posts_path, class: 'btn-secondary' %>
  </div>
</div>
