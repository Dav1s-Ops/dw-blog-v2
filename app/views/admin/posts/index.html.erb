<div>
  <h1 class="font-bold text-4xl">Admin::Posts#index</h1>
  
  <%= form_with url: admin_posts_path, method: :get, local: true do |form| %>
    <%= form.label :title_cont, 'Search' %>
    <%= form.text_field :title_cont %>
    <%= form.submit 'Search' %>
  <% end %>
  
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Slug</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.id %> </td>
          <td> <%= post.title %> </td>
          <td> <%= post.slug %> </td>
          <td>
            <%= link_to 'Edit', edit_admin_post_path(post), method: :edit %>
            <%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
