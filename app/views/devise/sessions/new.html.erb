<div class="min-h-screen flex items-start justify-center bg-gray-100">
  <div class="max-w-md w-full bg-white shadow-md rounded px-8 py-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input mt-1 w-full" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input mt-1 w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, class: "ml-2 block text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log In", class: "btn-primary w-full" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>